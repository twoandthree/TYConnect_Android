<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF4FF">

    <ImageView
        android:id="@+id/done_button_image"
        android:layout_width="199dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_name_edittext_image"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/donebutton" />

    <TextView
        android:id="@+id/introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/oxygen_regular"
        android:gravity="center"
        android:text="Please enter your first, and last name."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/last_name_edittext_image"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_edittext_image"
        app:srcCompat="@drawable/lastname_textedit" />

    <ImageView
        android:id="@+id/name_edittext_image"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introduction"
        app:srcCompat="@drawable/name_textedit" />

    <EditText
        android:id="@+id/cm_name_edittext_create_account_page"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@null"
        android:ems="14"
        android:fontFamily="@font/nanumgothic_regular"
        android:gravity="center"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/name_edittext_image"
        app:layout_constraintEnd_toEndOf="@+id/name_edittext_image"
        app:layout_constraintStart_toStartOf="@+id/name_edittext_image"
        app:layout_constraintTop_toBottomOf="@+id/introduction" />

    <EditText
        android:id="@+id/cm_lastname_edittext_create_account_page"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@null"
        android:ems="14"
        android:fontFamily="@font/nanumgothic_regular"
        android:gravity="center"
        android:hint="Last Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/last_name_edittext_image"
        app:layout_constraintEnd_toEndOf="@+id/last_name_edittext_image"
        app:layout_constraintStart_toStartOf="@+id/last_name_edittext_image"
        app:layout_constraintTop_toTopOf="@+id/last_name_edittext_image" />

</androidx.constraintlayout.widget.ConstraintLayout>